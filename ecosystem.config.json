{
  "apps": [{
    "name": "birkshoes-client",
    "script": "npm",
    "args": "run start:prod",
    "cwd": "/var/www/birkshoes.store",
    "instances": 1,
    "exec_mode": "fork",
    "env": {
      "NODE_ENV": "production",
      "PORT": 3000
    },
    "log_file": "/var/log/pm2/birkshoes-client.log",
    "out_file": "/var/log/pm2/birkshoes-client-out.log",
    "error_file": "/var/log/pm2/birkshoes-client-error.log",
    "pid_file": "/var/run/birkshoes-client.pid",
    "max_memory_restart": "500M",
    "watch": false,
    "autorestart": true,
    "max_restarts": 10,
    "min_uptime": "10s"
  }]
}
